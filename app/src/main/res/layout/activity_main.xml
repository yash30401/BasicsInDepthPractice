<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Type Your Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCheckUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Check User"
        app:layout_constraintEnd_toEndOf="@+id/etName"
        app:layout_constraintStart_toStartOf="@+id/etName"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <TextView
        android:id="@+id/tvCheckUserExist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/btnCheckUser"
        app:layout_constraintStart_toStartOf="@+id/btnCheckUser"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckUser" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Counter:- 0"
        app:layout_constraintEnd_toEndOf="@+id/btnCheckUser"
        app:layout_constraintStart_toStartOf="@+id/btnCheckUser"
        app:layout_constraintTop_toBottomOf="@+id/tvCheckUserExist" />

    <Button
        android:id="@+id/btnRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Redirect to Another App"
        app:layout_constraintEnd_toEndOf="@+id/tvCount"
        app:layout_constraintStart_toStartOf="@+id/tvCount"
        app:layout_constraintTop_toBottomOf="@+id/tvCount" />

    <Button
        android:id="@+id/btnStartSerivce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Start Foreground Service"
        app:layout_constraintEnd_toEndOf="@+id/btnRedirect"
        app:layout_constraintStart_toStartOf="@+id/btnRedirect"
        app:layout_constraintTop_toBottomOf="@+id/btnRedirect" />

    <Button
        android:id="@+id/btnStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Stop Foreground Service"
        app:layout_constraintEnd_toEndOf="@+id/btnStartSerivce"
        app:layout_constraintStart_toStartOf="@+id/btnStartSerivce"
        app:layout_constraintTop_toBottomOf="@+id/btnStartSerivce" />

    <Button
        android:id="@+id/btnVisitDataStoreActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="DataStore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStopService" />

        <TextView
          android:id="@+id/tvMappingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStopService" />

    <Button
        android:id="@+id/btnThirdActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Third Activity"
        app:layout_constraintEnd_toEndOf="@+id/btnVisitDataStoreActivity"
        app:layout_constraintStart_toStartOf="@+id/btnVisitDataStoreActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnVisitDataStoreActivity" />

    <Button
        android:id="@+id/btnCoroutineActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Coroutine Prac"
        app:layout_constraintEnd_toEndOf="@+id/btnThirdActivity"
        app:layout_constraintStart_toStartOf="@+id/btnThirdActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnThirdActivity" />

    <Button
        android:id="@+id/btnFlowsPrac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="164dp"
        android:text="FlowsPrac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCoroutineActivity" />


</androidx.constraintlayout.widget.ConstraintLayout>