<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Type Your Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCheckUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Check User"
        app:layout_constraintEnd_toEndOf="@+id/etName"
        app:layout_constraintStart_toStartOf="@+id/etName"
        app:layout_constraintTop_toBottomOf="@+id/etName" />

    <TextView
        android:id="@+id/tvCheckUserExist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/btnCheckUser"
        app:layout_constraintStart_toStartOf="@+id/btnCheckUser"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckUser" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Counter:- 0"
        app:layout_constraintEnd_toEndOf="@+id/btnCheckUser"
        app:layout_constraintStart_toStartOf="@+id/btnCheckUser"
        app:layout_constraintTop_toBottomOf="@+id/tvCheckUserExist" />

    <TextView
        android:id="@+id/tvLoremIpsum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRedirect" />

    <Button
        android:id="@+id/btnRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Redirect to Another App"
        app:layout_constraintEnd_toEndOf="@+id/tvCount"
        app:layout_constraintStart_toStartOf="@+id/tvCount"
        app:layout_constraintTop_toBottomOf="@+id/tvCount" />


</androidx.constraintlayout.widget.ConstraintLayout>